---
const links = [
  {
    name: "resume",
    url: "https://bit.ly/manomay-resume",
  },
  {
    name: "my VPS",
    url: "https://pi.manomay.co",
  },
  // {
  //   name: "pubkey",
  //   url: "/mank.pub",
  // },
];
---

<header
  id="header"
  class="flex m-0 p-0 flex-row w-full h-max px-5 border-b-[0.5px] border-gray-500 bg-white dark:bg-light-black top-0 z-30"
>
  <div class="container mx-auto py-4">
    <div class="flex justify-between items-center">
      <a href="/" class="text-center text-xl hover:-rotate-3 duration-200"
        >mank.</a
      >
      <div class="flex flex-row w-max gap-5 items-center justify-evenly">
        {
          links.map((link) => (
            <a
              target="_blank"
              href={link.url}
              class="text-center border-b-2 hover:border-mank-lime w-max border-transparent duration-100"
            >
              {link.name}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</header>
