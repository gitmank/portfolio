---
const links = [
  {
    name: "blog",
    url: "/blog",
  },
];
---

<header id="header" class="flex flex-row w-full h-max px-5 border-b-[0.5px] border-gray-400 bg-white dark:bg-black top-0 z-30">
  <div class="container mx-auto py-4">
    <div class="flex justify-between items-center">
      <a href="/" class="text-center text-xl hover:-rotate-6 duration-200">mank.</a>
      <div class="flex flex-row w-max gap-5 items-center justify-evenly">
        <a href='/docs/ManomayKagalkar.pdf' download="Manomay Kagalkar" class="text-center border-b-4 hover:border-mank-lime w-max border-transparent duration-100">resume</a>
        { links.map(link => <a href={link.url} class="text-center border-b-4 hover:border-mank-lime w-max border-transparent duration-100">{link.name}</a>)}
      </div>
    </div>
  </div>
</header>
